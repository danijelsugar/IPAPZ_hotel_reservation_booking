{% extends 'base.html.twig' %}

{% block body %}
    {% for r in room %}
        <h3>{{ r.category.name }} {{ r.subcategory.name }}</h3>
    {% endfor %}
    <p>Booking info {{ id }}</p>
    {{ form_start(form) }}
        {{ form_row(form.datefrom) }}
        {{ form_row(form.dateto) }}
        {{ form_row(form.email) }}
        {{ form_row(form.room,{'attr': {'value': id}}) }}
        <button type="submit" class="btn btn-primary mt-3" formnovalidate>Save</button>
    {{ form_end(form) }}
{% endblock %}
