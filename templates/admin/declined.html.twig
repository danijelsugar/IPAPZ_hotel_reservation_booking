{% extends 'base.html.twig' %}

{% block body %}

    <h2>Odbijene rezervacije</h2>
    {% for reservation in reservations %}
            <div class="row">
                <div class="col-6">
                    <p><strong>Od:</strong> {{ reservation.datefrom|date('d.m.Y') }}</p>
                    <p><strong>Do:</strong> {{ reservation.dateto|date('d.m.Y') }}</p>
                    <p><strong>Email:</strong> {{ reservation.email }}</p>
                    <p><strong>Soba:</strong> {{ reservation.room.category.name }} {{ reservation.room.subcategory.name }}</p>
                </div>

            </div>
            <hr>
    {% endfor %}


{% endblock %}