{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-12">
            <h3>Unesite naziv kategorije</h3>
            {{ form_start(categoryForm) }}
                {{ form_row(categoryForm.name) }}
                <button type="submit" class="btn btn-primary mt-3" formnovalidate>Spremi</button>
                <hr>
            {{ form_end(categoryForm) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Naziv</th>
                        <th>Akcija</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>
                            <a class="btn btn-dark" href="{{ path('admin/edit-category', {'id': category.id}) }}">Uredi</a>
                            <a class="btn btn-danger" href="{{ path('admin/delete-category', {'id': category.id}) }}">Obriši</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h3>Unesite naziv potkategorije</h3>
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            <button type="submit" class="btn btn-primary mt-3" formnovalidate>Spremi</button>
            <hr>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th>Naziv</th>
                    <th>Akcija</th>
                </tr>
                </thead>
                <tbody>
                {% for subCategory in subCategories %}
                    <tr>
                        <td>{{ subCategory.name }}</td>
                        <td>
                            <a class="btn btn-dark" href="{{ path('admin/edit-subcategory', {'id': subCategory.id})  }}">Uredi</a>
                            <a class="btn btn-danger" href="{{ path('admin/delete-subcategory', {'id': subCategory.id}) }}">Obriši</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}