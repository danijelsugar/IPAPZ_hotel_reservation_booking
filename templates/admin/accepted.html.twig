{% extends 'base.html.twig' %}

{% block body %}

    <h2>Accepted reservations</h2>
    {% for reservation in reservations %}
        {% if reservation.status is same as(true) %}
            <div class="row">
                <div class="col-6">
                    <p><strong>Date from:</strong> {{ reservation.datefrom|date('d.m.Y') }}</p>
                    <p><strong>Date to:</strong> {{ reservation.dateto|date('d.m.Y') }}</p>
                    <p><strong>Email:</strong> {{ reservation.email }}</p>
                    <p><strong>Room:</strong> {{ reservation.room.category.name }} {{ reservation.room.subcategory.name }}</p>
                </div>
                <div class="dec-acc col-6">
                    <a class="btn btn-warning" href="{{ path('admin/cancel', {'id': reservation.id,
                    'roomid': reservation.room.id}) }}">Cancel</a>
                    <a class="btn btn-info" href="{{ path('admin/edit-reservation', {'id': reservation.id}) }}">Change</a>
                </div>
            </div>
            <hr>
        {% endif %}
    {% endfor %}

{% endblock %}