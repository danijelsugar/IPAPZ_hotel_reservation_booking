{% extends 'base.html.twig' %}

{% block body %}

    <h2>Prihvaćene rezervacije</h2>
    {% for reservation in reservations %}
        {% if reservation.status is same as(true) %}
            <div class="row">
                <div class="col-6">
                    <p><strong>Od:</strong> {{ reservation.datefrom|date('d.m.Y') }}</p>
                    <p><strong>Do:</strong> {{ reservation.dateto|date('d.m.Y') }}</p>
                    <p><strong>Email:</strong> {{ reservation.user.email }}</p>
                    <p><strong>Soba:</strong> {{ reservation.room.category.name }} {{ reservation.room.subcategory.name }}</p>
                </div>
                <div class="dec-acc col-6">
                    <a class="btn btn-warning" href="{{ path('admin/cancel', {'id': reservation.id}) }}">Otkaži</a>
                </div>
            </div>
            <hr>
        {% endif %}
    {% endfor %}

{% endblock %}